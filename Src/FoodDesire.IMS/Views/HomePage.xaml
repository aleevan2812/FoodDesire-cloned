<Page
    x:Class="FoodDesire.IMS.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel with inventory summary -->
        <StackPanel Margin="20">
            <TextBlock Text="Inventory Summary" FontSize="24" Margin="0,0,0,10"/>

            <!-- Displaying total ingredients -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Uid="Home_AvailableSpace" FontSize="18"/>
                <TextBlock Text="{x:Bind ViewModel.InventorySummary.AvailableSpace, Mode=OneWay}" FontSize="18"/>
            </StackPanel>

            <!-- Displaying total cost of ingredients -->
          

        </StackPanel>

        <Grid Grid.Column="1">
        </Grid>
    </Grid>
</Page>
