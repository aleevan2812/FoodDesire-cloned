<MudLayout>
    <MudAppBar Elevation="1" Fixed="true" Style="background-color: white;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Color="Color.Dark" Class="mud-typography-header5">Food Desire</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="Search" Class="ma-2" Label="Search Foods" Variant="Variant.Filled" TextChanged="OnSearchTextChanged" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" Href="https://github.com/haritha99ch/FoodDesire" Target="_blank" />
        <MudMenu FullWidth="true">
            <ActivatorContent>
                <MudChip Icon="@Icons.Material.Filled.Person" Color="Color.Primary">Account</MudChip>
            </ActivatorContent>
            <ChildContent>
                @if (_isAuthenticated)
                {
                    <MudMenuItem OnClick="@(()=>NavigateTo("/Account/Index"))">Profile</MudMenuItem>
                    <MudMenuItem OnClick="OnSignOutButtonClicked">Sign Out</MudMenuItem>
                }
                else
                {
                    <MudMenuItem OnClick="@(()=>NavigateTo("/Account/SignUp"))">Sign Up</MudMenuItem>
                    <MudMenuItem OnClick="@(()=>NavigateTo("/Account/SignIn"))">Sign In</MudMenuItem>
                }
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudNavMenu>
            <MudNavLink Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Home/Index"))">Home</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Fastfood" Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Recipe/Index"))">Store</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.ShoppingCart" Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Cart/Index"))">Cart</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.ViewList" Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Order/Index"))">Orders</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>