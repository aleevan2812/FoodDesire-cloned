<MudLayout>
    <MudAppBar Elevation="1" Fixed="true" Style="background-color: white;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Color="Color.Dark" Class="mud-typography-header5">Food Desire</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="Search" Class="ma-2" Label="Search Foods" Variant="Variant.Filled" TextChanged="OnSearchTextChanged" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" Href="https://github.com/haritha99ch/FoodDesire" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Home/Index"))">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Recipe/Index"))">Store</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Cart/Index"))">Cart</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Order/Index"))">Orders</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Account/Index"))">Profile</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>