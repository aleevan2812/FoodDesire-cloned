<MudLayout>
    <MudAppBar Elevation="1" Fixed="false" Color="Color.Transparent">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Class="bold" > Food Desire</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="Search" Label="Search Recipes" Variant="Variant.Filled" TextChanged="OnSearchTextChanged"/>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/haritha99ch/FoodDesire" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Home/Index"))">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Recipe/Index"))">Store</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Recipe/Index"))">Orders</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" OnClick="@(()=>NavigateTo("/Recipe/Index"))">Profile</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>